      "source": [
        "import json\n",
        "import torch\n",
        "from torch.utils.data import Dataset, DataLoader\n",
        "from transformers import GPT2LMHeadModel, GPT2Tokenizer, AdamW, get_linear_schedule_with_warmup\n"
      ],
      "metadata": {
        "id": "XXnRTVdMnK53"
      },
      "execution_count": 2,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "class AppointmentDataset(Dataset):\n",
        "    def __init__(self, file_path):\n",
        "        self.data = pd.read_csv(file_path)\n",
        "\n",
        "    def __len__(self):\n",
        "        return len(self.data)\n",
        "\n",
        "    def __getitem__(self, idx):\n",
        "        item = self.data.iloc[idx]\n",
        "        return {\n",
        "            \"input\": item['command'],\n",
        "            \"description\": item['description'],\n",
        "            \"output\": item['response']\n",
        "        }"
      ],
      "metadata": {
        "id": "X8s7nl0tnwFg"
      },
      "execution_count": 13,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Initialize the tokenizer and model\n",
        "# Initialize the tokenizer and model\n",
        "tokenizer = GPT2Tokenizer.from_pretrained('gpt2')\n",
        "#Manually set the pad token\n",
        "tokenizer.pad_token = tokenizer.eos_token\n",
        "model = GPT2LMHeadModel.from_pretrained('gpt2')"
      ],
      "metadata": {
        "id": "QVZMJVZKn_hA"
      },
      "execution_count": 14,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Tokenize the data\n",
        "\n",
        "# Tokenize the data\n",
        "def tokenize_data(data, tokenizer, max_length=512):\n",
        "    # Convert the input and output to strings\n",
        "    input_text = str(data['input'])  # Ensure input is a string\n",
        "    output_text = str(data['output']) # Ensure output is a string\n",
        "\n",
        "    inputs = tokenizer(input_text, return_tensors='pt', max_length=max_length, truncation=True, padding=\"max_length\")\n",
        "    outputs = tokenizer(output_text, return_tensors='pt', max_length=max_length, truncation=True, padding=\"max_length\")\n",
        "    return {'input_ids': inputs['input_ids'].flatten(), 'labels': outputs['input_ids'].flatten()}"
      ],
      "metadata": {
        "id": "om2mubJ2pmFI"
      },
      "execution_count": 15,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Create the dataset and dataloader\n",
        "dataset = AppointmentDataset('df.csv')  # This is where file_path is used\n",
        "tokenized_data = [tokenize_data(item, tokenizer) for item in dataset]\n",
        "dataloader = DataLoader(tokenized_data, batch_size=2, shuffle=True)"
      ],
      "metadata": {
        "id": "RyUrHcUjp1zC"
      },
      "execution_count": 16,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "# Fine-tune the model\n",
        "device = torch.device(\"cuda\" if torch.cuda.is_available() else \"cpu\")\n",
        "model.to(device)\n",
        "\n",
        "optimizer = AdamW(model.parameters(), lr=5e-5)\n",
        "total_steps = len(dataloader) * 3  # 3 epochs\n",
        "scheduler = get_linear_schedule_with_warmup(optimizer, num_warmup_steps=0, num_training_steps=total_steps)"
      ],
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "NyN0smoErE6u",
        "outputId": "f3e8271a-365d-4bf8-b147-b3ad12f0d558"
      },
      "execution_count": 17,
      "outputs": [
